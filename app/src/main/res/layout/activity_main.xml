<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textAlignment="viewEnd"
        android:padding="5dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:ellipsize="end"
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_below="@id/tvsec"
        android:layout_above="@id/scrollView"
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAlignment="viewEnd"
        android:gravity="bottom"
        android:maxLines="1"
        android:ellipsize="end"
        tools:ignore="RtlCompat" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/lLparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/bac"
                            android:text="AC"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bc"
                            android:text="C"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bb1"
                            android:text="("
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bb2"
                            android:text=")"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <Button
                            android:id="@+id/bsin"
                            android:text="sin"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bcos"
                            android:text="cos"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/btan"
                            android:text="tan"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bcot"
                            android:text="cot"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/blog"
                            android:text="log"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bln"
                            android:text="ln"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <Button
                            android:id="@+id/bfactorial"
                            android:text="x!"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bsquare"
                            android:text="X²"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bsqrt"
                            android:text="√"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/binv"
                            android:text="1/x"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bdiv"
                            android:text="÷"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/b7"
                            android:text="7"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/b8"
                            android:text="8"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/b9"
                            android:text="9"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bmul"
                            android:text="×"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/b4"
                            android:text="4"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/b5"
                            android:text="5"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/b6"
                            android:text="6"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bmin"
                            android:text="-"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/b1"
                            android:text="1"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/b2"
                            android:text="2"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/b3"
                            android:text="3"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bplus"
                            android:text="+"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/bpi"
                            android:text="π"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/b0"
                            android:text="0"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bdot"
                            android:text="."
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/bequal"
                            android:text="="
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:visibility="gone"
                        >

                        <Button
                            android:text="π"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="0"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="."
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="="
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        android:weightSum="4">

                        <Button
                            android:text="π"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="0"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="."
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="="
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        android:weightSum="4">

                        <Button
                            android:text="π"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="0"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="."
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <Button
                            android:text="="
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>